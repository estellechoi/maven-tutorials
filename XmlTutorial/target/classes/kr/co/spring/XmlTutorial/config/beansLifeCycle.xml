<?xml version="1.0" encoding="UTF-8"?>
<!-- 스프링 설정 파일  -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="defaultInit"
	default-destroy-method="defaultDestroy">

	<!--  xml 설정정보 로딩시, 싱글톤 (디폴트)  -->
	<!-- init-method = "메소드명" 속성 : 생성자 실행시 지정된 메소드도 자동으로 실행됨  -->
	<!-- destroy-method = "메소드명" 속성 : bean 소멸시(컨테이너 종료시) 지정된 메소드가 자동으로 실행됨  -->
	<bean id="beansLifeCycle" class="kr.co.spring.XmlTutorial.beans.BeansLifeCycle" lazy-init="true" init-method="beanInit" destroy-method="beanDestroy"/>
	
	
	<!-- init-method, destroy-method 미설정 -->
	<!-- <beans> 태그내 default-init-method, default-destroy-method 에 지정된 메소드가 실행됨  -->
	<bean id="beansLifeCycle2" class="kr.co.spring.XmlTutorial.beans.BeansLifeCycle2" lazy-init="true" />
	
	<!-- init-method, destroy-method 설정  -->
	<!-- <beans> 태그내 default-init-method, default-destroy-method 도 지정  -->
	<!-- default-init/destroy-method 를 설정하더라도, init/destroy-method 미설정시에만 호출된다 ! -->
	<bean id="beansLifeCycle3" class="kr.co.spring.XmlTutorial.beans.BeansLifeCycle3" lazy-init="true" init-method="beanInit" destroy-method="beanDestroy"/>

	<!-- default-init/destroy-method 에 설정된 메소드가 해당 빈에 없으면 무시하고 작동 (오류 X) -->
	<!-- init/destroy-method 에 설정된 메소드가 해당 빈에 없으면 오류 발생  -->
	<bean id="beansLifeCycle4" class="kr.co.spring.XmlTutorial.beans.BeansLifeCycle4" lazy-init="true" />
<!-- 	<bean id="beanLifeCycle4" class="kr.co.spring.XmlTutorial.beans.BeansLifeCycle4" lazy-init="true" init-method="beanInit" destroy-method="beanDestroy"/> -->

</beans>